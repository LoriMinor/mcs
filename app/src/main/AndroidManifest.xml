<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.group19.cs3380.mycollegesearch" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ResultListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultDetailActivity"
            android:label="@string/title_result_detail"
            android:parentActivityName=".ResultListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ResultListActivity" />
        </activity>
    </application>

</manifest>
